# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/multi-vendor-ecommerce
MONGODB_TEST_URI=mongodb://localhost:27017/multi-vendor-ecommerce-test
RUN_MIGRATIONS=true

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
COOKIE_SECRET=your-cookie-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AWS Configuration (for file storage, SES, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Application Configuration
APP_NAME="Multi-Vendor E-commerce"
APP_URL=http://localhost:5000
API_PREFIX=/api
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Queue Configuration
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Metrics & Monitoring
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_SECRET=your-api-key-secret

# External APIs
GEOCODING_API_KEY=your-geocoding-api-key
CURRENCY_API_KEY=your-currency-api-key
WEATHER_API_KEY=your-weather-api-key

# Admin Configuration
ADMIN_EMAIL=admin@yourapp.com
ADMIN_PASSWORD=your-admin-password

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-s3-bucket

# Development Configuration
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/multi-vendor-ecommerce-test
TEST_REDIS_URL=redis://localhost:6379/1
MOCK_PAYMENTS=true
MOCK_EMAILS=true
MOCK_SMS=true

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
MAX_FILE_SIZE=50mb
MAX_REQUEST_SIZE=50mb

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,zh,ja,ar
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD

# Business Configuration
PLATFORM_FEE_PERCENTAGE=2.9
VENDOR_FEE_PERCENTAGE=5.0
MINIMUM_ORDER_AMOUNT=10.00
MAXIMUM_ORDER_AMOUNT=10000.00
FREE_SHIPPING_THRESHOLD=50.00

# Vendor Configuration
VENDOR_VERIFICATION_REQUIRED=true
VENDOR_APPLICATION_FEE=99.00
VENDOR_MONTHLY_FEE=29.00
VENDOR_COMMISSION_RATE=0.15

# Product Configuration
MAX_PRODUCT_IMAGES=10
MAX_PRODUCT_VIDEOS=3
MAX_PRODUCT_VARIANTS=50
MAX_PRODUCT_DESCRIPTION_LENGTH=5000
PRODUCT_REVIEW_AUTO_APPROVAL=false

# Notification Configuration
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=false
PUSH_NOTIFICATION_ENABLED=false
