DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=multi-vendor-ecommerce-api
DOCKER_TAG=latest

# CI/CD Configuration
CI_ENABLED=false
CD_ENABLED=false
DEPLOY_BRANCH=main
TEST_BRANCH=develop

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000
ALERT_EMAILS=alerts@yourapp.com,devops@yourapp.com

# External Services
STRIPE_CONNECT_CLIENT_ID=ca_your-stripe-connect-client-id
PAYPAL_CLIENT_ID=your-paypal-client-id
